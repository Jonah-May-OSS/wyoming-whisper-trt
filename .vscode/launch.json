// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug in WSL",
      "type": "debugpy",
      "request": "launch",
      "module": "wyoming_whisper_trt",
      "args": [
        "--model", "tiny",
        "--uri", "tcp://0.0.0.0:10300",
        "--data-dir", "./.vscode/data",
        "--device", "cuda",
        "--compute-type", "int8",
        "--beam-size", "5",
        "--language", "auto",
        "--debug"
      ],
      "console": "integratedTerminal"
    }
  ]
}
